extends ../layout/index

block content
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class=" text-center text-2xl font-extrabold")= pagina 
        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5")
                    div
                        label(for="nombre" class="block text-sm uppercase text-white-500 mb-2 font-bold") Tu nombre
                        input(class="w-full px-3 py-2 border border-gray-300 placeholder-gray-400" placeholder="Tu nombre" id="nombre")
                    div
                        label(for="password" class="block text-sm uppercase text-white-500 mb-2 font-bold") Tu password
                        input(class="w-full px-3 py-2 border border-gray-300 placeholder-gray-400" placeholder="Tu password" id="password")
                    div(class="flex items-center justify-between")
                        a(href="/auth/forgot_password") Forgot password?
                        a(href="/auth/register") no account?
                    input(type="submit" value="Entrar" class="w-full bg-indigo-600 hover:bg-indigo-800 text-white cursor-pointer py-3 rounded")
                    