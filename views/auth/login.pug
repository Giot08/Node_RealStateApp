extends ../layout/index

block content
    div(class="py-10")
        h2(class=" text-center text-2xl font-extrabold")= page 
        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
        
        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label(for="nombre" class="block text-sm uppercase text-white-500 mb-2 font-bold") Email
                        input(class="w-full px-3 py-2 border border-gray-300 placeholder-gray-400" type="email" placeholder="email" name="email" value= user ? user.email : "")
                    div
                        label(for="password" class="block text-sm uppercase text-white-500 mb-2 font-bold") Password
                        input(class="w-full px-3 py-2 border border-gray-300 placeholder-gray-400" type="password" placeholder="password" name="password")
                    div(class="flex items-center justify-between")
                        a(href="/auth/forgot_password" class="text-blue-600 hover:text-blue-900") Forgot password?
                        a(href="/auth/register" class="text-blue-600 hover:text-blue-900") no account?
                    input(type="submit" value="Entrar" class="w-full bg-blue-600 hover:bg-blue-800 text-white cursor-pointer py-3 rounded")
                    