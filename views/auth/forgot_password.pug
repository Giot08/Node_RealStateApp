extends ../layout/index

block content
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Free
            span(class="font-normal") Bazar
        h2(class=" text-center text-2xl font-extrabold")= page 
         if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/forgot_password")
                    input(type="hidden", name="_csrf" value= csrfToken)
                    div
                        label(for="nombre" class="block text-sm uppercase text-white-500 mb-2 font-bold") Email
                        input(type="email" class="w-full px-3 py-2 border border-gray-300 placeholder-gray-400" placeholder="Your email" name="email" value= user ? user.email : "")
                    div(class="flex items-center justify-between")
                        a(href="/auth/login") Login
                    input(type="submit" value="Recordar password" class="w-full bg-indigo-600 hover:bg-indigo-800 text-white cursor-pointer py-3 rounded")
                    